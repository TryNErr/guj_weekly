extends layout

block content
    h1.
        Advertisement List - Week #{week)
    div
        table.gradienttable
            thead
                tr
                    th
                        p Advertisement Type
                    th
                        p Advertiser Name
                    th
                        p Start - End
                    th
                        p OneOff
                    th
                        p Alternate
                    th
                        p Edit
            tbody
                each item in publist
                    tr
                        td
                            p #{item.addesc}    
                        td 
                            p #{item.username}   
                        td 
                            p #{item.start} - #{item.end}    
                        td 
                            p #{item.oneoff} - #{item.oneoffdone}  - #{item.reminder}  
                        td 
                            if(item.reminder == 'Y')
                                p #{item.alternate} - #{item.altstart} 
                                a(href="/sendmail/#{item.username}/#{item.useremail}")
                                    button(type="button") Send Reminder
                        td 
                            a(href="/updad/#{item._id }")
                                button(type="button") Edit Advertiser
